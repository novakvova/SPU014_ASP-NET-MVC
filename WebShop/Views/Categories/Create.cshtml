@model WebShop.Models.CategoryCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Додати категорію</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" enctype="multipart/form-data">
            
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="UploadImage" class="control-label"></label>
                <input asp-for="UploadImage" type="file" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Додати категорію" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Повернутися до списку</a>
</div>

